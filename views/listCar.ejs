    <title>Add User</title>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <script>
    $(document).ready(function() {
      $('#tab1').click(function() {
        $('#table2').hide();
        $('#table1').show();
      });
      $('#tab2').click(function() {
        $('#table1').hide();
        $('#table').show();
      });
    });
  </script>
  </head>
  <body class="para">
    <%- include('header'); -%>
    <div style="height: 4em"></div>
    <div class="modal-header" style="background-color: #f9d9b9b5">
      <h4>
        Danh sách Xe đã đăng ký <b style="color: #a0a0f5; font-size: 25px"></b>
      </h4>
    </div>

    <div class="container">
      <ul class="nav nav-tabs">
        <li class="nav item">
          <a class="nav-link active" data-toggle="tab" href="#table1" id="tab1">Xe đã qua đăng ký</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#table2" id="tab2">Xe sắp hết hạn đăng kiểm</a>
        </li>
      </ul>

      <div class="tab-content">
        <div class="tab-pane fade show active" id="table1">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Họ tên</th>
                <th scope="col">Hình thức</th>
                <th scope="col">Nhãn hiệu</th>
                <th scope="col">Ngày cũ Đăng kiểm</th>
                <th scope="col">Ngày mới Đăng kiểm</th>
                <th scope="col">Trung tâm đăng kiểm</th>
              </tr>
            </thead>
            <tbody>
              <% result1.forEach(row => { %>
              <tr>
                <td><%=row.ten %></td>
                <td><%=row.type %></td>
                <td><%=row.nhanHieu %></td>
                <td><%=row.ngayCuGiayDK %></td>
                <td><%=row.ngayMoiGiayDK %></td>
                <td><%=row.noiDk %></td>
              </tr>
              <%}); %>
            </tbody>
          </table>
        </div>

        <div class="tab-pane fade" id="table2">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Họ tên</th>
                <th scope="col">Hình thức</th>
                <th scope="col">Nhãn hiệu</th>
                <th scope="col">Ngày cũ Đăng kiểm</th>
                <th scope="col">Ngày mới Đăng kiểm</th>
                <th scope="col">Trung tâm đăng kiểm</th>
              </tr>
            </thead>
            <tbody>
              <% result2.forEach(row => { %>
              <tr>
                <td><%=row.ten %></td>
                <td><%=row.type %></td>
                <td><%=row.nhanHieu %></td>
                <td><%=row.ngayCuGiayDK %></td>
                <td><%=row.ngayMoiGiayDK %></td>
                <td><%=row.noiDk %></td>
              </tr>
              <%}); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
