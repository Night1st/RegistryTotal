      }
      img {
        max-width: 100%;
      }
      .para {
        padding-top: 3.6em;
      }
      i {
        cursor: pointer;
      }
      .users:hover .user {
        display: block;
      }

      .user {
        display: none;
        position: absolute;
        float: right;
        z-index: 1;
        right: 2%;
        top: 30px;
        background-color: white;
        padding: 5px;
        color: #046b7b;
        width: 15rem;
        box-shadow: rgba(0, 0, 0, 0.05) 2px 3px 3px;
      }
      @media screen and (max-width: 768px) {
        .user {
          display: none;
          position: absolute;
          float: left;
          z-index: 10;
          right: 0%;
          top: -0.5em;
          width: 15rem;
        }
      }
